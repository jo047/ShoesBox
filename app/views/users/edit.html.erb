<h1>ユーザー情報変更</h1>

<%= form_with model:@user, local:true do |f| %>
    <%= f.label :ユーザー名 %>
    <%= f.text_field :name, autofocus: true, class:"form-control" %>
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, class:"form-control" %>
    <%= f.label :自己紹介 %>
    <%= f.text_field :self_introduction, autofocus: true, class:"form-control" %>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "noimage.jpeg"%>
    <label class="control-label sr-only" for="inputEmail">プロフィール画像</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>

    <%= f.submit "登録", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>
<br>
<br>
<%= link_to "退会する", user_registration_path, method: :delete , "data-confirm" => "本当に消しますか?" ,class:"btn btn-lg btn-block btn-danger" %>