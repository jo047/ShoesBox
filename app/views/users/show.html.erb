<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="user-info-title">ユーザー情報</h1>
      <div class= "user-info">
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, class: "img-circle pull-left profile-img", fallback: "noimage.jpg", size:'100x100' %>
        <h3 class="profile-name">ユーザー名　<%= @user.name %></h3>
        <p>自己紹介文　<%= @user.self_introduction %></p>
        <% if @user.id == current_user.id %>
          <%= link_to "ユーザー情報編集", edit_user_path(@user), class: "btn btn-info" %>
        <% end %>
      </div>
      <h1 class="user-shoes-post-title"><%= @user.name %>さんの靴一覧</h1>
      <div class ="user-shoes-list">
        <% @shoes_posts.each do |shoes_post| %>
        <%= link_to shoes_post_path(shoes_post.id) do %>
        <%= attachment_image_tag shoes_post, :shoes_image, :fill, 300, 300 %>
        <div class="shoes_name">
          <p>靴名：<%= shoes_post.shoes_name.truncate(23) %></p>
        <% end %>
          <hr>
          <p>ブランド名<%= shoes_post.brand_name.truncate(23) %></p>
          <hr>
          <span><%= shoes_post.shoes_comments.count %>コメント</span>
          <span><%= shoes_post.shoes_favorites.count %>いいね</span>
          <hr>
        </div>
        <p>投稿日：　<%= shoes_post.created_at.strftime("%Y年%m月%d日%H時%M分") %></p>
        <hr>
        <br><br>
        <% end %>
        <%= paginate @shoes_posts %>
      </div>
    </div>
  </div>
</div>