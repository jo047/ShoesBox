<section class="slice sct-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-6 col-md-offset-3 post_image_form">
            <div class="section-title-wrapper style-1 v1">
              <h3 class="section-title section-title-sm left">
                <span>靴を投稿する</span>
              </h3>
            </div>
            <!-- <form class="mt-20"> -->
            <%= form_with model:@shoes_post, local:true do |f| %>
              <% if @shoes_post.errors.any? %>
                <div id="error_explanation">
                  <h2><%= @shoes_post.errors.count %>件のエラーが発生しました。</h2>
                  <ul>
                  <% @shoes_post.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="row">
                <div class="col-sm-12">
                  <%= f.attachment_field :shoes_image %>
                </div>
              </div>
              <br>
              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group has-icon">
                    <label class="control-label sr-only">靴の名前</label>
                    <%= f.text_field :shoes_name, class:"form-control", placeholder:"靴の名前" %>
                    <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
                    <br>
                    <label class="control-label sr-only">ブランド名</label>
                    <%= f.text_field :brand_name, class:"form-control", placeholder:"ブランド名" %>
                    <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
                    <br>
                    <label class="control-label sr-only">購入した店舗</label>
                    <%= f.text_field :purchase_store, class:"form-control", placeholder:"購入した店舗" %>
                    <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
                    <br>
                  </div>
                </div>
                <div class="col-sm-6">
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <%= f.text_area :shoes_introduction, class:"form-control", rows:"3", placeholder:"紹介文" %>
                </div>
              </div>
              <hr>
              <%= f.submit "投稿", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
            <% end %>
            <!-- </form> -->
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
