

<% if shoes_post.favorited_by?(current_user) %>
    <%= link_to shoes_post_shoes_favorites_path(shoes_post), method: :delete, remote: true, class: "glyphicon glyphicon-heart" do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      <%= shoes_post.shoes_favorites.count %>
    <% end %>
  <% else %>
    <%= link_to shoes_post_shoes_favorites_path(shoes_post), method: :post, remote: true, class: "glyphicon glyphicon-heart-empty"  do %>
      <i class="fa fa-heart-o" aria-hidden="true"></i>
      <%= shoes_post.shoes_favorites.count %>
    <% end %>
<% end %>



