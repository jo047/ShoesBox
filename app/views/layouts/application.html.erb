<!DOCTYPE html>
<html>
  <head>
    <title>ShoesBox</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <div class="header" id="header">
      <nav class="navbar navbar-main navbar-shadow" role="navigation" id="slide-nav">
        <div class="container relative">
          <div class="navbar-header">
            <a class="navbar-logo" href="/">
              <%= "image_tag('logo.png')" %>
            </a>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
    
    <div id="slidemenu">
      <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
        <% if user_signed_in? %>
          <li class="">
            <%= link_to 'みんなの靴', shoes_posts_path %>
          </li>
          <li class="">
            <%= link_to '投稿する', new_shoes_post_path %>
          </li>
          <li class="">
            <!-- ↓以下のコードは、5章で正しいroutingに書き直します。 -->
            <%= link_to 'マイページ', user_path(current_user.id) %>
          </li>
          <li class="">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          </li>
        <% else %>
          <li class="">
            <%= link_to "新規登録", new_user_registration_path %>
          </li>
          <li class="">
            <%= link_to "ログイン", new_user_session_path %>
          </li>
        <% end %>
      </ul>
    </div>
    </div>
      </nav>
    </div>

    <%= yield %>

<footer class="footer style-2">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="col">
        <br>
        <p class="no-margin" style="font-size: 11px;">
        <br>
          靴に関しての交流を行うSNS
        </p>
        <%= "image_tag('logo-white.png')" %>
        </div>
      </div>
    </div>
  </div>
</footer>

  </body>
</html>
