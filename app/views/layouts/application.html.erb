<!DOCTYPE html>
<html>
  <head>
    <title>ShoesBox</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
    				<span class="sr-only">Toggle navigation</span>
    				<span class="icon-bar"></span>
    				<span class="icon-bar"></span>
    				<span class="icon-bar"></span>
    				<span class="icon-bar"></span>
  			  </button>
  			</div>
  			  <a class="navbar-brand" href="#">
          <%= image_tag 'logo.png', :size =>'200x35' %>
          </a>

          <div class="collapse navbar-collapse" id="navbarEexample">
			      <ul class="nav navbar-nav  navbar-right">
              <% if user_signed_in? %>
              <li><%= link_to '靴投稿一覧', shoes_posts_path %></li>
              <li><%= link_to '投稿する', new_shoes_post_path %></li>
              <li><%= link_to 'マイページ', user_path(current_user.id) %></li>
              <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
              <form class="navbar-form navbar-left" role="search">
                <div class="form-group">
                  <%= search_form_for @search, url: shoes_posts_path do |f| %>
                    <%= f.text_field :shoes_name_or_brand_name_cont ,placeholder: '' %>
                </div>
                    <%= f.submit ("検索") , class: 'search-btn'%>
                  <% end %>
              </form>
              <% else %>
              <li><%= link_to "新規登録", new_user_registration_path %></li>
              <li><%= link_to "ログイン", new_user_session_path %></li>
              <% end %>
            </ul>
        </div>
      </div>
    </nav>
<div class="container content">
    <%= yield %>
</div>

<footer class="footer mt-auto py-3">
  <div class="container">
    <!-- <span class="text-muted">Place sticky footer content here.</span> -->
    <span class="text-muted">靴に関しての交流を行うSNS</span>
  </div>
</footer>

  </body>
</html>
